{
  "manifest_version": 2,
  "name": "Anti-Detection Extension",
  "version": "1.0",
  "description": "Скрывает navigator.webdriver и другие признаки автоматизации",

  "applications": {
    "gecko": {
      "id": "antidetect@selenium.firefox",
      "strict_min_version": "57.0"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ]
}
